                <div class="form-group has-feedback">
                    <label class="col-md-2 control-label">Địa chỉ nhận hàng</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control address" name="Address" readonly placeholder="Địa chỉ nhận hàng">
                        <span class="fa fa-map-pin form-control-feedback"></span>
                        <div class="has-error">
                            <label class="control-label" style="padding-top:0px">Thay đổi địa chỉ nhận hàng vui lòng liên hệ bộ phận chăm sóc khách hàng!</label>
                        </div>
                    </div>
                </div>
                <div class="form-group has-feedback">
                    <label class="col-md-2 control-label">Tên Công Ty(SHOP)</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control nameEn" name="nameEn" placeholder="Công ty">
                        <span class="fa fa-archive form-control-feedback"></span>
                    </div>
                </div>
                @* Đổi mật khẩu *@
                <div class="form-group has-feedback">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <button type="button" class="btn btn-primary" onclick="toggleChangePassword()">Đổi mật khẩu</button>
                    </div>
                </div>
                <div class="change-password" hidden>
                    <div class="form-group has-feedback">
                        <label class="col-md-2 control-label">Nhập mật khẩu cũ</label>
                        <div class="col-md-6">
                            <input type="password" class="form-control" id="oldPassword" name="nhập mật khẩu cũ" placeholder="nhập mật khẩu cũ" />
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        <label class="col-md-2 control-label">Nhập mật khẩu mới</label>
                        <div class="col-md-6">
                            <input type="password" class="form-control" id="newPassword" name="nhập mật khẩu mới" placeholder="nhập mật khẩu mới" />
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                    </div>
                    <div class="form-group has-feedback">
                        <label class="col-md-2 control-label">Nhập lại mật khẩu</label>
                        <div class="col-md-6">
                            <input type="password" class="form-control" id="confirmPassword" name="nhập lại mật khẩu mới" placeholder="nhập lại mật khẩu mới" />
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                    </div>
                    <div class="form-group has-feedback lblmessage display-none">
                        <label class="col-md-2 control-label"></label>
                        <div class="col-md-6">
                            <label class="font-red-haze" style="color:red"><i class="fa fa-exclamation-triangle"></i> <span class="message">Dữ liệu không hợp lệ!</span></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2"></div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-primary btn-block btn-flat" onclick="changePassword()"> <i class="fa fa-lock"></i> Lưu</button>
                        </div>
                    </div>
                </div>
