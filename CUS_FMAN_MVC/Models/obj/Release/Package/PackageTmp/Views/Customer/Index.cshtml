        <div class="row">
            <div class="col-md-3">
                <img class="profile-user-img img-responsive img-circle" src="/content/dist/img/user.png" alt="User profile picture">
                <h3 class="profile-username text-center name"><label class="name"></label></h3>
                <p class="text-muted text-center"><label class="nameEn"></label></p>
            </div>
            <div class="col-md-9 form-horizontal">
                <div class="form-group has-feedback">
                    <label class="col-md-2 control-label">Họ tên</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control name" name="CustomerName" placeholder="Họ và tên">
                        <span class="fa fa-user-secret form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group has-feedback">
                    <label class="col-md-2 control-label">Số điện thoại</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control phone" name="Phone" placeholder="Điện thoại">
                        <span class="fa fa-phone form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group has-feedback">
                    <label class="col-md-2 control-label">Địa chỉ e-mail</label>
                    <div class="col-md-10">
                        <input type="email" class="form-control email" name="Email" placeholder="Email" readonly>
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                </div>
